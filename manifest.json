{
    "name": "UBeast",
    "version": "1",
    "manifest_version": 3,
    "description": "An extension that do anything just as you wish. A best tool that really help you out in your YOUTUBE Marketing.",
    "permissions": [
        "tabs",
        "webRequest",
        "webNavigation",
        "scripting"
        ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "icons":{
        "16": "logo_16x16.png",
        "32": "logo_32x32.png",
        "48": "logo_48x48.png",
        "128": "logo_128x128.png"
        },
    "background": {
            "service_worker": "background.js"
    },

// "options_page": "./option.html"
"action": {
    "default_icon": "logo_128x128.png",
    "default_popup": "popup.html"
}

